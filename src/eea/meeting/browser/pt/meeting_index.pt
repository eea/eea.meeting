<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en"
  metal:use-macro="here/main_template/macros/master"
  i18n:domain="eea">
  <body>
    <div metal:fill-slot="content-core" >
      <p tal:condition="python: context.is_registered()">
        You are registered for this meeting.
      </p>
      <tal:block condition="context/can_register">
        <tal:block condition="not:python: context.is_anonymous()">
          <p tal:condition="not:python: context.is_registered()">
            <a tal:attributes="href string:${context/absolute_url}/register">Register</a>
            for this meeting as <span class="username" tal:content="view/get_auth_user_name" />
          </p>
          <p>You can <a tal:attributes="href string:${context/absolute_url}/subscribers/++add++eea.meeting.subscriber">sign up</a>
            for someone else to participate in this meeting</p>
        </tal:block>
        <p tal:condition="context/is_anonymous">
          <a tal:attributes="href string:${context/absolute_url}/subscribers/++add++eea.meeting.subscriber">Sign up</a>
          to participate in this meeting
        </p>
      </tal:block>
      <p>
        <a tal:condition="python:here.get('subscribers', None)" tal:attributes="href string:${here/absolute_url}/subscribers" >
          Subscribers</a>
      </p>
      <table class="listing">
        <thead>
          <tr>
            <th>First name</th>
            <th>Last name</th>
            <!--<th>UID</th>-->
            <th>State</th>
          </tr>
        <thead>
        <tbody>
          <tr tal:repeat="subscriber python:context.get_subscribers()">
            <td tal:content="python:subscriber.firstname" />
            <td tal:content="python:subscriber.lastname" />
            <!--<td>-->
              <!--<a tal:attributes="href subscriber/absolute_url" tal:content="subscriber/uid" />-->
            <!--</td>-->
            <td>
              <span tal:content="subscriber/state" />
            </td>
          </tr>
        </tbody>
        <tfoot>
        </tfoot>
      </table>

      <form name="folderContentsForm"
        method="post"
        action="folder_object"
        tal:attributes="action context/absolute_url"
        class="kssattr-serveraction-foldercontents_update_table">
        <div tal:replace="structure view/contents_table"></div>
        <input tal:replace="structure context/@@authenticator/authenticator" />
      </form>
    </div>
  </body>
</html>
